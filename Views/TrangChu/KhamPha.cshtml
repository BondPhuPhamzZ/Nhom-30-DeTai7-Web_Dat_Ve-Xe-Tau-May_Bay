
@{
    ViewBag.Title = "KhamPha";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<style>
    /*Phần banner */
    .khampha-1 {
        position: relative;
        align-items: center;
        justify-content: center;
        color: white;
        padding: 20px 20px;
        border-radius: 10px;
        margin: 20px auto;
        max-width: 1240px;
        overflow: hidden;
    }
    .khampha-1 img {
        position: relative;
        max-width: 1240px;
        width: 100%;
        height: 400px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        z-index: 1;
        object-fit: cover;
        filter: brightness(70%);
    }

    .khampha-1 .content-1 {
        position: absolute;
        padding: 30px;
        z-index: 2;
    }

    .khampha-1 .content-1 p {
        font-size: 25px;
        font-weight: 500;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.8); /* chữ có bóng */
    }

    .khampha-1 .content-1 h2 {
        font-size: 40px;
        margin: 10px 0;
        font-weight: bold;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.8); /* chữ có bóng */
    }

    .khampha-1 .content-1 .btn-chon-ve {
        margin-bottom: 10px;
    }

    .khampha-1 .content-1 .btn-chon-ve a {
        display: inline-block;
        margin-right: 15px;
        padding: 10px 20px;
        background-color: white;
        color: #001C40;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background 0.3s, color 0.3s;
    }
    
    .khampha-1 .content-1 .btn-chon-ve a:hover {
        background-color: yellow;
        color: #001C40;
    }

    /* ================ Phần các tỉnh nên đến ===============*/
    .vietnam-province .province-row {
        display: flex;
        justify-content: space-between;
        margin: 20px auto;
        max-width: 1200px;
        padding: 0 10px;
    }

    .country-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .country-item p {
        padding: 0 10px 20px 10px;
    }

    .country-item {
        margin-top: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        text-align: center;
        background-color: #001C40;
        color: #f1f1f1;
        width: 32%;
        transition: transform 0.3s;
        cursor: pointer;
        overflow: hidden;
    }

    .country-item:hover {
        transform: translateY(-10px);
    }

    /*Chữ h2 đầu tiên*/
    #content .vietnam-toi-yeu {
        text-align: center;
        font-size: 50px;
        font-weight: bold;
        margin-top: 100px;
        margin-bottom: 30px;
    }
</style>
