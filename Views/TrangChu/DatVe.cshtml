        display: flex;
        flex-direction: column;
        text-align: center;
        cursor: pointer;
    }

    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 10px;
     }

    .card h3 {
        font-size: 30px;
        margin-top: 30px;
        margin-bottom: 10px;
        color: #001C40;
    }

    .card .pay-for {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin: 30px 0;
    }

    .card .pay-for p {
        font-weight: bold;
        font-size: 18px;
        color: #001C40;
    }

    .card .pay-for h4 {
        font-size: 22px;
        color: #001C40;
        font-weight: bold;
    }

    .card p {
        flex-grow: 1; /* phần text chiếm không gian còn lại */
        font-size: 20px;
        line-height: 1.4;
    }

    .card a {
        align-self: center; /* căn nút ở giữa */
        padding: 10px 20px; /*Khoảng cách chữ trong nút so với viền nút*/
        background-color: #001C40;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        font-size: 20px;
        transition: background-color 0.3s, color 0.3s;
        margin-bottom: 40px;
    }

    .card a:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        background-color: #FFD700;
        color: #001C40;
        opacity: 0.8;
    }

    .card:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    }

    /* ============== Set phần ảnh banner nằm dưới chữ ==============*/
    .anh-duoi-chu {
        position: relative;
        margin-bottom: 30px;
    }

    .anh-duoi-chu .img-datve-banner {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
        display: block;
        filter: brightness(0.65);
        transition: transform 0.3s, filter 0.3s;
    }

    /* lớp ảo cho chữ nằm trên ảnh */
    .banner-text {
        position: absolute;
        inset: 0; /* phủ toàn bộ ảnh */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 10px; /* tránh chữ dính mép */
