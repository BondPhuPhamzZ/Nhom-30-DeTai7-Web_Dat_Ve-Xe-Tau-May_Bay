    }

    /* ===================== Các card gợi ý những chuyến đi ===================*/
    .card {
        padding: 10px;
        background-color: white;
        color: #001C40;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: transform 0.3s;
