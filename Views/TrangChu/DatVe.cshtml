    ViewBag.Title = "DatVe";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<style>
    #content {
/*      max-width: 1240px;*/
        margin: 20px auto;
        padding: 0 20px;
        margin-bottom: 200px;
    }

    /*Tabs => Khi nhấn vào các nút thì sẽ hiển thị khung chọn vé ra*/
    .service-tabs {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    /* Phần cha - khung chứa các nút tab ấn để chuyển form => lớp cha bao gồm 5 nút tab */
    .tab-buttons {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }

    /* Ẩn nút tròn để tick => ẩn radio để trông chuyên nghiệp hơn */
    .tab-buttons input[type="radio"] {
        display: none;
    }

    /* nút tab lựa chọn thể loại vé */
    .tab-buttons .tab-service {
        padding: 12px 25px;
        background-color: #001C40;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        font-size: 20px;
        border: 2px solid #ddd;
    }

    /*Khi di chuột qua các tab*/
    .tab-buttons .tab-service:hover {
        background-color: #001C40;
        filter: brightness(110%);
        color: white;
        border: 2px solid #001C40;
    }

    /* Khi nhấn vào tab => đang ở tab nào thì tab đó sẽ sáng lên */
    .tab-buttons input[type="radio"]:checked + label {
        background-color: white;
        color: #001C40;
        border: 2px solid #001C40;
        opacity: 0.8;
        backdrop-filter: blur(5px);
    }

    /* Ẩn tất cả form mặc định */
    .form-service {
        display: none;
    }

    /* Hiển thị form khi tab tương ứng được chọn */
    /*VD: Khi nhấn vào thẻ input có id là tab-plane thì form có class là form-plane sẽ hiển thị lên*/
    #tab-plane:checked ~ .form-plane {
        display: block;
    }

    #tab-train:checked ~ .form-train {
        display: block;
    }

    #tab-bus:checked ~ .form-bus {
        display: block;
    }

    #tab-hotel:checked ~ .form-hotel {
        display: block;
    }

    #tab-car:checked ~ .form-car {
        display: block;
    }

    /*Style cho khung form */
    .form-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        background-color: rgba(0, 28, 64, 0.85);
        padding: 20px;
        border-radius: 10px;
     }

     .form-row label {
        margin-right: 8px;
        font-weight: bold;
        align-self: center;
        color: white;
     }

     .form-row input[type="text"],
     .form-row input[type="date"],
     .form-row input[type="number"],
     .form-row select {
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        width: 150px;
     }

     /*Nút tìm kiếm chuyến bay*/
     .form-row button {
        font-weight: bold;
        padding: 10px 20px;
        background-color: #001C40;
        color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
     }

     .form-row button:hover {
        color: #001C40;
        background-color: yellow;
     }

     /*Những chuyến đi nổi bật => card thể hiện vé gợi ý*/
    .choose-trip h2 {
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        margin-top: 100px;
        margin-bottom: 100px;
    }

    .choose-trip img {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .choose-trip {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 50px;
    }
    /*========================= Phần content trong trang đặt vé ==========================*/
    /*Set thuộc tính cho hàng 1 hàng gồm 3 card*/
    .choose-trip-1 {
        display: flex;
        justify-content: space-between;
        margin: 20px auto;
        max-width: 1200px;
        padding: 0 10px;
        gap: 20px;
    }

    /*Thuộc tính ảnh nằm dưới thẻ h2*/

    .card {
        padding: 10px;
        background-color: white;
        color: #001C40;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: transform 0.3s;
        flex: 1; /* mỗi card chiếm không gian bằng nhau */
        display: flex;
        flex-direction: column; /* xếp nội dung theo cột */
        justify-content: space-between; /* đẩy nút xuống cuối => Do dùng thuộc tính display: flex; flex-direction: column; thì Phần tử đầu tiên nằm sát trên cùng, Phần tử cuối cùng nằm sát dưới cùng, Các phần tử ở giữa được phân bổ khoảng cách đều nhau */
        text-align: center;
        cursor: pointer;
    }

    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 10px;
     }

    .card h3 {
        font-size: 30px;
        margin-bottom: 10px;
        color: #001C40;
    }

    .card .pay-for {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin: 10px 0;
    }

    .card .pay-for p {
        font-weight: bold;
        font-size: 18px;
        color: #001C40;
    }

    .card .pay-for h4 {
        font-size: 22px;
        color: #001C40;
        font-weight: bold;
    }

    .card p {
        flex-grow: 1; /* phần text chiếm không gian còn lại */
        font-size: 20px;
        line-height: 1.4;
    }

    .card a {
        align-self: center; /* căn nút ở giữa */
        margin: 10px 0 20px 0; /* khoảng cách trên nút */
        padding: 10px 20px; /*Khoảng cách chữ trong nút so với viền nút*/
        background-color: #001C40;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        font-size: 20px;
        transition: background-color 0.3s, color 0.3s;

    }

    .card a:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        background-color: yellow;
        color: #001C40;
    }

    .card:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    }

    /* ============== Set phần ảnh banner nằm dưới chữ ==============*/
    .anh-duoi-chu {
        position: relative;
        margin-bottom: 30px;
    }

    .anh-duoi-chu .img-datve-banner {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
        display: block;
        filter: brightness(0.65);
        transition: transform 0.3s, filter 0.3s;
    }

    /* lớp ảo cho chữ nằm trên ảnh */
    .banner-text {
        position: absolute;
        inset: 0; /* phủ toàn bộ ảnh */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 10px; /* tránh chữ dính mép */
        overflow: hidden;
    }

    .banner-text h2 {
        font-size: 32px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    }

    /*Set thuộc tính cho phần du lịch ngoài nước*/
    .top-trip.out-country {
        margin-top: 100px;
    }

    /*Set thuộc tính cho slogan ở thanh search chọn vé*/
    .service-tabs h3 {
        text-align: center;
        font-size: 45px;
        font-weight: bold;
        margin-bottom: 40px;
    }
</style>
