
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    <link href="~/Content/MyMainStyle/GioHangStyle.css" rel="stylesheet" />
}

@*html giỏ hàng*@
<div class="container">
    <h1 class="page-title">Giỏ hàng của bạn</h1>
    <p class="page-subtitle">Kiểm tra và hoàn tất đặt chỗ của bạn</p>

    <div class="cart-content">
        @*Lớp cha*@
        <div class="cart-items">
             @*Vé máy bay*@ 
            <div class="cart-item">
                <div class="item-header">
                    <input type="checkbox" class="item-checkbox" checked>
                    <span class="item-type">✈️ Vé máy bay</span>
                    <span class="special-badge">Giá tốt nhất</span>
                </div>
                <div class="item-body">
                    <div class="item-details">
                        <div class="item-route">
                            Hà Nội <span class="route-arrow">→</span> TP. Hồ Chí Minh
                        </div>
                        <div class="item-info">
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Ngày bay:</span>
                                <span class="info-value">15/10/2025</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">⏰</span>
                                <span class="info-label">Giờ khởi hành:</span>
                                <span class="info-value">08:30 - 10:45</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">✈️</span>
                                <span class="info-label">Hãng bay:</span>
                                <span class="info-value">Vietnam Airlines</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">💺</span>
                                <span class="info-label">Hạng vé:</span>
                                <span class="info-value">Phổ thông</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-pricing">
                        <div class="price-section">
                            <div class="price-label">Giá/người</div>
                            <div class="price-amount">1.890.000₫</div>
                        </div>
                        <div class="quantity-section">
                            <span class="quantity-label">Số vé:</span>
                            <div class="quantity-control">
                                <button class="quantity-btn" type="button">−</button>
                                <input type="number" class="quantity-input" value="2" min="1">
                                <button class="quantity-btn" type="button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="save-later-btn" type="button">💾 Lưu để đặt sau</button>
                    <button class="remove-btn" type="button">🗑️ Xóa</button>
                </div>
            </div>

             @*Khách sạn*@ 
            <div class="cart-item">
                <div class="item-header">
                    <input type="checkbox" class="item-checkbox" checked>
                    <span class="item-type">🏨 Khách sạn</span>
                </div>
                <div class="item-body">
                    <div class="item-details">
                        <div class="item-route">
                            Khách sạn Mường Thanh Luxury Sài Gòn
                        </div>
                        <div class="item-info">
                            <div class="info-row">
                                <span class="info-icon">📍</span>
                                <span class="info-label">Địa chỉ:</span>
                                <span class="info-value">Quận 1, TP.HCM</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Check-in:</span>
                                <span class="info-value">15/10/2025</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Check-out:</span>
                                <span class="info-value">17/10/2025</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">🛏️</span>
                                <span class="info-label">Loại phòng:</span>
                                <span class="info-value">Deluxe - 2 giường đơn</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-pricing">
                        <div class="price-section">
                            <div class="price-label">Giá/đêm</div>
                            <div class="price-amount">850.000₫</div>
                        </div>
                        <div class="quantity-section">
                            <span class="quantity-label">Số đêm:</span>
                            <div class="quantity-control">
                                <button class="quantity-btn" type="button">−</button>
                                <input type="number" class="quantity-input" value="2" min="1">
                                <button class="quantity-btn" type="button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="save-later-btn" type="button">💾 Lưu để đặt sau</button>
                    <button class="remove-btn" type="button">🗑️ Xóa</button>
                </div>
            </div>

             @*Vé tàu*@ 
            <div class="cart-item">
                <div class="item-header">
                    <input type="checkbox" class="item-checkbox" checked>
                    <span class="item-type">🚄 Vé tàu</span>
                </div>
                <div class="item-body">
                    <div class="item-details">
                        <div class="item-route">
                            Hà Nội <span class="route-arrow">→</span> Huế
                        </div>
                        <div class="item-info">
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Ngày đi:</span>
                                <span class="info-value">20/10/2025</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">⏰</span>
                                <span class="info-label">Giờ khởi hành:</span>
                                <span class="info-value">19:30</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">🚄</span>
                                <span class="info-label">Tàu số:</span>
                                <span class="info-value">SE3</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">🛏️</span>
                                <span class="info-label">Loại chỗ:</span>
                                <span class="info-value">Giường nằm khoang 6</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-pricing">
                        <div class="price-section">
                            <div class="price-label">Giá/vé</div>
                            <div class="price-amount">450.000₫</div>
                        </div>
                        <div class="quantity-section">
                            <span class="quantity-label">Số vé:</span>
                            <div class="quantity-control">
                                <button class="quantity-btn" type="button">−</button>
                                <input type="number" class="quantity-input" value="1" min="1">
                                <button class="quantity-btn" type="button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="save-later-btn" type="button">💾 Lưu để đặt sau</button>
                    <button class="remove-btn" type="button">🗑️ Xóa</button>
                </div>
            </div>

             @*Vé xe*@ 
            <div class="cart-item">
                <div class="item-header">
                    <input type="checkbox" class="item-checkbox">
                    <span class="item-type">🚌 Vé xe</span>
                </div>
                <div class="item-body">
                    <div class="item-details">
                        <div class="item-route">
                            TP. Hồ Chí Minh <span class="route-arrow">→</span> Đà Lạt
                        </div>
                        <div class="item-info">
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Ngày đi:</span>
                                <span class="info-value">22/10/2025</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">⏰</span>
                                <span class="info-label">Giờ khởi hành:</span>
                                <span class="info-value">21:00</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">🚌</span>
                                <span class="info-label">Nhà xe:</span>
                                <span class="info-value">Phương Trang (Futa Bus)</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">💺</span>
                                <span class="info-label">Loại xe:</span>
                                <span class="info-value">Giường nằm VIP</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-pricing">
                        <div class="price-section">
                            <div class="price-label">Giá/vé</div>
                            <div class="price-amount">250.000₫</div>
                        </div>
                        <div class="quantity-section">
                            <span class="quantity-label">Số vé:</span>
                            <div class="quantity-control">
                                <button class="quantity-btn" type="button">−</button>
                                <input type="number" class="quantity-input" value="2" min="1">
                                <button class="quantity-btn" type="button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="save-later-btn" type="button">💾 Lưu để đặt sau</button>
                    <button class="remove-btn" type="button">🗑️ Xóa</button>
                </div>
            </div>

             @*Thuê xe*@ 
            <div class="cart-item">
                <div class="item-header">
                    <input type="checkbox" class="item-checkbox">
                    <span class="item-type">🚗 Thuê xe</span>
                </div>
                <div class="item-body">
                    <div class="item-details">
                        <div class="item-route">
                            Toyota Vios - Tự lái
                        </div>
                        <div class="item-info">
                            <div class="info-row">
                                <span class="info-icon">📍</span>
                                <span class="info-label">Nhận xe:</span>
                                <span class="info-value">Sân bay Tân Sơn Nhất</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Ngày nhận:</span>
                                <span class="info-value">15/10/2025 - 10:00</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">📅</span>
                                <span class="info-label">Ngày trả:</span>
                                <span class="info-value">17/10/2025 - 10:00</span>
                            </div>
                            <div class="info-row">
                                <span class="info-icon">⚙️</span>
                                <span class="info-label">Loại xe:</span>
                                <span class="info-value">Sedan 4 chỗ - Số tự động</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-pricing">
                        <div class="price-section">
                            <div class="price-label">Giá/ngày</div>
                            <div class="price-amount">550.000₫</div>
                        </div>
                        <div class="quantity-section">
                            <span class="quantity-label">Số ngày:</span>
                            <div class="quantity-control">
                                <button class="quantity-btn" type="button">−</button>
                                <input type="number" class="quantity-input" value="2" min="1">
                                <button class="quantity-btn" type="button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="save-later-btn" type="button">💾 Lưu để đặt sau</button>
                    <button class="remove-btn" type="button">🗑️ Xóa</button>
                </div>
            </div>
        </div>

        @*Phần tóm tắt vé bên phải*@
        <div class="summary-sidebar">
            <div class="summary-card">
                <h3 class="summary-title">Tóm tắt đơn hàng</h3>

                <div class="summary-row">
                    <span class="summary-label">Vé máy bay (x2)</span>
                    <span class="summary-value">3.780.000₫</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Khách sạn (2 đêm)</span>
                    <span class="summary-value">1.700.000₫</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Vé tàu (x1)</span>
                    <span class="summary-value">450.000₫</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Phí dịch vụ</span>
                    <span class="summary-value">80.000₫</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Thuế VAT</span>
                    <span class="summary-value">601.000₫</span>
                </div>

                <div class="promo-section">
                    <div class="promo-title">Mã giảm giá</div>
                    <div class="promo-input-group">
                        <input type="text" class="promo-input" placeholder="Nhập mã giảm giá">
                        <button class="promo-btn" type="button">Áp dụng</button>
                    </div>
                </div>

                <div class="total-section">
                    <div class="total-row">
                        <span class="total-label">Tổng cộng</span>
                        <span class="total-amount">6.611.000₫</span>
                    </div>
                    <button class="checkout-btn" type="button">Tiến hành thanh toán</button>
                    @*<div class="security-note">🔒 Giao dịch bảo mật và an toàn</div>*@
                </div>

                @*<div class="benefits">
                    <div class="benefit-item">
                        <span class="benefit-icon">✓</span>
                        <span>Hoàn tiền 100% nếu hủy trong 24h</span>
                    </div>
                    <div class="benefit-item">
                        <span class="benefit-icon">✓</span>
                        <span>Hỗ trợ khách hàng 24/7</span>
                    </div>
                    <div class="benefit-item">
                        <span class="benefit-icon">✓</span>
                        <span>Giá tốt nhất được đảm bảo</span>
                    </div>
                </div>*@
            </div>
        </div>
    </div>
</div>
