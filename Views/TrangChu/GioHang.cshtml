    justify-content: space-between;
    margin-bottom: 12px;
    font-size: 15px;
}

.summary-label {
    color: #666;
}

.summary-value {
    color: #333;
    font-weight: 600;
}

/*===================== PROMO SECTION =====================*/
.promo-section {
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    margin: 20px 0;
}

.promo-title {
    font-size: 14px;
    color: #666;
    margin-bottom: 10px;
    font-weight: 600;
}

.promo-input-group {
    display: flex;
    gap: 8px;
}

.promo-input {
    flex: 1;
    padding: 10px 12px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    transition: border-color 0.3s;
}

.promo-input:focus {
    outline: none;
    border-color: #FFD700;
}

.promo-btn {
    padding: 10px 18px;
    background-color: #001C40;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.2s;
}

.promo-btn:hover {
    background-color: #FFD700;
    color: #001C40;
}

/*===================== TOTAL SECTION =====================*/
.total-section {
    padding-top: 20px;
    margin-top: 20px;
    border-top: 2px dashed #ddd;
}

.total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.total-label {
    font-size: 18px;
    color: #001C40;
    font-weight: 600;
}

.total-amount {
    font-size: 28px;
    font-weight: bold;
