/*===================== responsive cho web =====================*/

/* Tablet */
@@media (max-width: 1024px) {
    .cart-content {
        grid-template-columns: 1fr 320px;
        gap: 20px;
    }

    .item-body {
        flex-direction: column;
    }

    .item-pricing {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
}

/* Mobile */
@@media (max-width: 768px) {
    .container {
        padding: 15px;
    }

    .page-title {
        font-size: 32px;
        margin-top: 30px;
    }

    .cart-content {
        grid-template-columns: 1fr;
    }

    .summary-sidebar {
        position: static;
    }

    .cart-item {
        padding: 15px;
    }

    .item-route {
        font-size: 18px;
    }

    .info-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
    }

    .info-label {
        min-width: auto;
        font-weight: 600;
    }

    .item-pricing {
        flex-direction: row;
        width: 100%;
    }

    .price-section {
        text-align: left;
    }
}

/* Small Mobile */
@@media (max-width: 480px) {
    .page-title {
        font-size: 28px;
    }

    .item-header {
        flex-wrap: wrap;
    }

    .item-body {
        gap: 15px;
    }

    .item-pricing {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }

    .quantity-section {
        width: 100%;
        justify-content: space-between;
    }

    .item-actions {
        flex-direction: column;
        gap: 8px;
    }

    .save-later-btn,
    .remove-btn {
        width: 100%;
        text-align: left;
    }
}

